#site-info
  height: 100vh

#nav
  margin-bottom: 0

#site-404-home
  margin-top: 20px
  p
    color: rgba(255, 255, 255, 0.8)
    font-size: 1rem
    margin: 10px 0
  a
    display: inline-block
    margin-top: 10px
    padding: 10px 30px
    background: rgba(255, 255, 255, 0.9)
    color: #333
    border-radius: 25px
    text-decoration: none
    font-weight: bold
    transition: all 0.3s
    &:hover
      background: #fff
      transform: scale(1.05)
  .redirect-notice
    font-size: 0.85rem
    color: rgba(255, 255, 255, 0.6)